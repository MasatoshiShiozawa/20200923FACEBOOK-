<h1>ブログ一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>内容</th>
    <th>投稿者名</th>
  </tr>
<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.content %></td>
    <td><%= blog.user.firstname %><%= blog.user.name %></td>
    <td><%= link_to '詳細を確認する', blog_path(blog.id) %></td>
  </tr>
<% end %>
</table>
<%= link_to '新しくブログを投稿する', new_blog_path %>
